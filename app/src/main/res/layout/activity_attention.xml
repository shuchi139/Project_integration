        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/instruction3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="86dp"
        android:layout_y="89dp"
        android:fontFamily="cursive"
        android:text="the same as previous one ?"
        android:textSize="27sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/instruction2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="121dp"
        android:layout_y="52dp"
        android:fontFamily="cursive"
        android:text="Is this doughnut "
        android:textSize="27sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/open"
        android:layout_width="100dp"
        android:layout_height="69dp"
        android:layout_x="159dp"
        android:layout_y="484dp"
        android:rotation="-20"
        app:srcCompat="@mipmap/ic_launcher" />


</AbsoluteLayout>