<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Signup" >



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="427dp"
        android:layout_height="137dp"
        android:layout_x="0dp"
        android:layout_y="-11dp"
        app:srcCompat="@drawable/strip" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="94dp"
        android:layout_height="66dp"
        android:layout_x="164dp"
        android:layout_y="14dp"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="140dp"
        android:layout_y="75dp"
        android:text="Verification Code"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold|italic" />


    <EditText
        android:id="@+id/otp_et1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_x="32dp"
        android:layout_y="295dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:hint=""
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/otp_et2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_x="91dp"
        android:layout_y="293dp"
        android:fontFamily="sans-serif-condensed"
        android:hint=""
        android:textSize="25dp"
        android:inputType="text"
        android:gravity="center"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/otp_et6"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_x="332dp"
        android:layout_y="293dp"
        android:fontFamily="sans-serif-condensed"
        android:inputType="text"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/otp_et5"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_x="271dp"
        android:layout_y="292dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="25dp"
        android:inputType="text"
        android:gravity="center"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/otp_et4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_x="211dp"
        android:layout_y="293dp"
        android:fontFamily="sans-serif-condensed"
        android:inputType="text"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/otp_et3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_x="152dp"
        android:layout_y="293dp"
        android:fontFamily="sans-serif-condensed"
        android:inputType="text"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/verificationcodeimage"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_x="189dp"
        android:layout_y="166dp"
        app:srcCompat="@drawable/otp" />

    <ImageView
        android:id="@+id/familyimage"
        android:layout_width="69dp"
        android:layout_height="60dp"
        android:layout_x="171dp"
        android:layout_y="653dp"
        app:srcCompat="@drawable/family" />

    <TextView
        android:id="@+id/verificationcodetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="69dp"
        android:layout_y="229dp"
        android:text="Enter 6 digits verificatio code sent to:"
        android:textColor="@color/blue"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/gotonext"
        android:layout_width="305dp"
        android:layout_height="34dp"
        android:layout_x="54dp"
        android:layout_y="725dp"
        android:background="@drawable/roundbutton"
        android:fontFamily="sans-serif-condensed"
        android:text="Tell us more about your family and lifestyle"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/verifycode"
        android:layout_width="133dp"
        android:layout_height="76dp"
        android:layout_x="142dp"
        android:layout_y="449dp"
        android:background="@drawable/roundbutton"
        android:fontFamily="sans-serif-condensed"
        android:text="Verify Code"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tophonenumber"
        android:layout_width="169dp"
        android:layout_height="29dp"
        android:layout_x="140dp"
        android:layout_y="250dp"
        android:text="+91"
        android:textColor="@color/blue"
        android:textSize="17dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/nextarrow"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_x="315dp"
        android:layout_y="602dp"
        app:srcCompat="@drawable/nextarrow" />

</AbsoluteLayout>