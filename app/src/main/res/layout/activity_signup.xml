<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Signup" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="427dp"
        android:layout_height="137dp"
        android:layout_x="0dp"
        android:layout_y="-11dp"
        app:srcCompat="@drawable/strip" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="94dp"
        android:layout_height="66dp"
        android:layout_x="164dp"
        android:layout_y="14dp"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="126dp"
        android:layout_y="75dp"
        android:text="Member Registration"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/username"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_x="97dp"
        android:layout_y="217dp"
        android:fontFamily="sans-serif-condensed"
        android:hint="Email id"
        android:inputType="text" />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_x="233dp"
        android:layout_y="158dp"
        android:fontFamily="sans-serif-condensed"
        android:hint="Last Name"
        android:inputType="text"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/firstname"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_x="96dp"
        android:layout_y="158dp"
        android:fontFamily="sans-serif-condensed"
        android:hint="First Name"
        android:inputType="text"
        android:textColor="#000000" />


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="25dp"
        android:layout_height="29dp"
        android:layout_x="59dp"
        android:layout_y="167dp"
        app:srcCompat="@drawable/name" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="28dp"
        android:layout_height="24dp"
        android:layout_x="61dp"
        android:layout_y="325dp"
        app:srcCompat="@drawable/password" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="34dp"
        android:layout_x="58dp"
        android:layout_y="380dp"
        app:srcCompat="@drawable/confirm" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:layout_x="58dp"
        android:layout_y="440dp"
        app:srcCompat="@drawable/gender" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="101dp"
        android:layout_y="520dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Birthdate"
        android:textColor="#58CBFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="101dp"
        android:layout_y="442dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Gender"
        android:textColor="#58CBFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="56dp"
        android:layout_height="26dp"
        android:layout_x="45dp"
        android:layout_y="515dp"
        app:srcCompat="@drawable/dob" />

    <DatePicker
        android:id="@+id/birthdate"
        android:layout_width="wrap_content"
        android:layout_height="89dp"
        android:layout_x="85dp"
        android:layout_y="540dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="37dp"
        android:layout_height="31dp"
        android:layout_x="56dp"
        android:layout_y="221dp"
        app:srcCompat="@drawable/username" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="69dp"
        android:layout_height="60dp"
        android:layout_x="172dp"
        android:layout_y="629dp"
        app:srcCompat="@drawable/family" />

    <Button
        android:id="@+id/next"
        android:layout_width="305dp"
        android:layout_height="34dp"
        android:layout_x="61dp"
        android:layout_y="699dp"
        android:background="@drawable/roundbutton"
        android:fontFamily="sans-serif-condensed"
        android:text="Tell us more about your family and lifestyle"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="322dp"
        android:layout_height="42dp"
        android:layout_x="102dp"
        android:layout_y="475dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male     " />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female     " />

        <RadioButton
            android:id="@+id/other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other" />


    </RadioGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="98dp"
        android:layout_y="300dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/blue"

        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/password"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:hint="Password"
            android:inputType="textPassword"></EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="98dp"
        android:layout_y="365dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/blue"
        tools:ignore="MissingConstraints">

        <EditText

            android:id="@+id/confirmpassword"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"></EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/signupwithphonenumber"
        android:layout_width="325dp"
        android:layout_height="31dp"
        android:layout_x="69dp"
        android:layout_y="275dp"
        android:linksClickable="true"
        android:clickable="true"
        android:text="Sign up with phone number instead?"
        android:textColor="@color/blue"
        android:textSize="18dp" />

</AbsoluteLayout>